#include <stdio.h>
#include <stdbool.h>

// This is a function that will allow me to swap two integers
void swap(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

// This is a function to generate permutations iteratively
void generatePermutations(int n) {
    int arr[n];
    int indices[n];

    //This is the function to initialize the array and indices
    for (int i = 0; i < n; i++) {
        arr[i] = i + 1;
        indices[i] = 0;
    }

    bool hasNext = true;

    while (hasNext) {
        // This is a function that will allow me to print the current permutation
        for (int i = 0; i < n; i++) {
            printf("%d", arr[i]);
            if (i < n - 1) {
                printf(",");
            }
        }
        printf("\n");

        // This is a function that will allow me to generate the next permutation
        int i = n - 1;
        while (i >= 0 && (indices[i] == i)) {
            indices[i] = 0;
            i--;
        }

        if (i < 0) {
            hasNext = false;
        } else {
            indices[i]++;
            swap(&arr[i], &arr[indices[i]]);
        }
    }
}

int main() {
    int n;
    printf("Enter a value for n (n should be between 1 and 8): ");
    scanf("%d", &n);

    if (n < 1 || n > 8) {
        printf("Invalid input. Please enter a value between 1 and 8.\n");
        return 1;
    }

    generatePermutations(n);

    return 0;
}
